@model RedirectResultActionsCoreMvc_Demo.Models.Department

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header bg-primary text-white text-uppercase">
        <h4>New Department</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary rounded-0"/>
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
